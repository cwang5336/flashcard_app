<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardActivity"
    android:backgroundTint="@color/white">


    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:scaleX="2.5"
        android:scaleY="2.5"
        app:srcCompat="@drawable/ic_backbutton" />

    <ImageButton
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:scaleX="2.5"
        android:scaleY="2.5"
        app:srcCompat="@drawable/ic_savebutton" />


    <EditText
        android:layout_weight="1"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/addQuestionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="17"
        android:hint="Enter The Question Here"
        android:gravity="center_horizontal"
        android:inputType="textMultiLine"
        />

    <EditText
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/addAnswerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter The Answer Here"
        android:gravity="center_horizontal"
        android:layout_below ="@id/addQuestionText"
        android:ems="17"
        android:inputType="textMultiLine"
        />


</RelativeLayout>